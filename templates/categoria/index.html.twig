{% extends 'base.html.twig' %}

{% block body %}
    <h3>{{ categoria.nombre }}</h3>
    {% for articulo in categoria.articulos %}
        <div class="articulo">
            <h4><a href="{{ path("ver_articulo",{id:articulo.id}) }}" >{{ articulo.nombre }}</a></h4>
            <div class="precio_articulo">
                {{ articulo.precio }}
            </div>
        </div>
    {% else %}
        No items have been found.
    {% endfor %}
{% endblock %}
